{
  "extends": [
    "eslint:recommended",
    "inferno-app",
    "prettier",
    "plugin:prettier/recommended"
  ],
  "plugins": [
    "prettier"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jquery": true
  },
  "ignorePatterns": [
    "build/",
    "node_modules/",
    "public",
    "*.html"
  ],
  "rules": {
    "no-trailing-spaces": "error"
  }
}
